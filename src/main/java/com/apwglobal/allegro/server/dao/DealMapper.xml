<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.apwglobal.allegro.server.dao.DealDao">

    <select id="findLastProcessedDealEventId" resultType="java.util.Optional">
        select eventid from last_processed_deal
    </select>

    <select id="findLastRowId" resultType="java.util.Optional">
        SELECT max(eventid)
        FROM deals
    </select>

    <select id="getLastDeals" parameterType="int" resultType="com.apwglobal.nice.domain.Deal">
        SELECT *
        FROM deals
        ORDER BY eventid DESC
        LIMIT #{limit}
    </select>

    <select id="getDealsAfterEventId" parameterType="long" resultType="com.apwglobal.nice.domain.Deal">
        SELECT *
        FROM deals
        WHERE eventId > #{eventId}
        ORDER BY eventId ASC
    </select>

    <insert id="saveDeal">
        INSERT INTO deals
        (eventid, dealtype, eventtime, dealId, transactionid, sellerid, itemid, buyerid, quantity)
        VALUES
            (#{eventId}, #{dealType}, #{eventTime}, #{dealId}, #{transactionId, jdbcType=BIGINT}, #{sellerId}, #{itemId}, #{buyerId},
             #{quantity})
    </insert>

    <update id="updateLastProcessedDealEventId" parameterType="com.apwglobal.nice.domain.Deal">
        UPDATE last_processed_deal SET eventid = #{eventId}
    </update>

</mapper>